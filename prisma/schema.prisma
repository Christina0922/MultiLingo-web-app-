// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  plan         Plan     @default(FREE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  creditLedgers CreditLedger[]
  histories     History[]
  purchases     Purchase[]
  favorites     LanguageFavorite[]
  recentLangs   RecentLanguage[]

  @@map("users")
}

enum Plan {
  FREE
  PLUS
  PRO
}

model CreditLedger {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  usedCredits Int
  resetAt   DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("credit_ledgers")
}

model TranslationCache {
  id            String   @id @default(cuid())
  hash          String   @unique
  sourceText    String   @db.Text
  sourceLang    String   @default("ko")
  targetLang    String
  translatedText String  @db.Text
  createdAt     DateTime @default(now())

  @@index([hash])
  @@index([sourceLang, targetLang])
  @@map("translation_cache")
}

model History {
  id           String   @id @default(cuid())
  userId       String
  sourceText   String   @db.Text
  selectedLangs String[] // JSON array of language codes
  results      String   @db.Text // JSON object: { langCode: translatedText }
  creditsUsed  Int
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("histories")
}

model Purchase {
  id            String   @id @default(cuid())
  userId        String
  type          PurchaseType
  amount        Int      // in KRW (Ïõê)
  creditsGranted Int
  providerRef   String?  // Stripe payment intent ID or subscription ID
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("purchases")
}

enum PurchaseType {
  SUBSCRIPTION_PLUS_MONTHLY
  SUBSCRIPTION_PLUS_YEARLY
  SUBSCRIPTION_PRO_MONTHLY
  SUBSCRIPTION_PRO_YEARLY
  TOPUP_S
  TOPUP_M
  TOPUP_L
}

model LanguageFavorite {
  id        String   @id @default(cuid())
  userId    String
  langCode  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, langCode])
  @@map("language_favorites")
}

model RecentLanguage {
  id        String   @id @default(cuid())
  userId    String
  langCode  String
  usedAt    DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, langCode])
  @@index([userId, usedAt])
  @@map("recent_languages")
}

