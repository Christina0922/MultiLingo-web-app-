// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String?   // 소셜 로그인 사용자는 null
  name         String?   // 소셜 로그인에서 가져올 수 있는 이름
  image        String?   // 프로필 이미지 URL
  plan         Plan      @default(FREE)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  accounts     Account[]
  creditLedgers CreditLedger[]
  histories     History[]
  purchases     Purchase[]
  favorites     LanguageFavorite[]
  recentLangs   RecentLanguage[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

enum Plan {
  FREE
  PLUS
  PRO
}

model CreditLedger {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  usedCredits Int
  resetAt   DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("credit_ledgers")
}

model TranslationCache {
  id            String   @id @default(cuid())
  hash          String   @unique
  sourceText    String   @db.Text
  sourceLang    String   @default("ko")
  targetLang    String
  translatedText String  @db.Text
  createdAt     DateTime @default(now())

  @@index([hash])
  @@index([sourceLang, targetLang])
  @@map("translation_cache")
}

model History {
  id           String   @id @default(cuid())
  userId       String
  sourceText   String   @db.Text
  selectedLangs String[] // JSON array of language codes
  results      String   @db.Text // JSON object: { langCode: translatedText }
  creditsUsed  Int
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("histories")
}

model Purchase {
  id            String   @id @default(cuid())
  userId        String
  type          PurchaseType
  amount        Int      // in KRW (원)
  creditsGranted Int
  providerRef   String?  // Stripe payment intent ID or subscription ID
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("purchases")
}

enum PurchaseType {
  SUBSCRIPTION_PLUS_MONTHLY
  SUBSCRIPTION_PLUS_YEARLY
  SUBSCRIPTION_PRO_MONTHLY
  SUBSCRIPTION_PRO_YEARLY
  TOPUP_S
  TOPUP_M
  TOPUP_L
}

model LanguageFavorite {
  id        String   @id @default(cuid())
  userId    String
  langCode  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, langCode])
  @@map("language_favorites")
}

model RecentLanguage {
  id        String   @id @default(cuid())
  userId    String
  langCode  String
  usedAt    DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, langCode])
  @@index([userId, usedAt])
  @@map("recent_languages")
}

